#:set color_font (0, 0, 0, 1)

<AddByBarcode>:
	FloatLayout:
		Image:
			source: 'images/logo.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 1, 1
		BoxLayout:
			size_hint: 0.15, 0.08
			Button:
				background_normal: 'images/retour.png'
				on_press: root.manager.current = 'AddBookHome'

	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, 0.08
		pos_hint: {'center_x': 0.5,'center_y': 0.96}
		canvas.before:
			Color:
				rgba: 1, 1, 1, 0.4
			Rectangle:
				size: self.size
				pos: self.pos

		Spinner:
			id: menu_spinner
			values: ['Accueil', 'Bibliothèque', 'Ajout']
			size_hint: 0.55, 1
			on_text: app.handle_menu_selection(menu_spinner.text)
			option_cls: 'CustomSpinnerOption'

			background_color: (1, 1, 1, 0)
			canvas.after:
				Rectangle:
					size: self.width / 1.5, self.height / 1.25
					pos: (self.x, self.center_y - (self.height / 1.25) / 2)
					source: 'images/menu.png'

		Label:
			text: 'MyLib'
			font_size: 18
			color: 'black'

		Spinner:
			id: profile_spinner
			values: ['Mon Profil', 'Modifier', 'Déconnexion']
			size_hint: 0.55, 1
			on_text: app.handle_profile_selection(profile_spinner.text)
			option_cls: 'CustomSpinnerOption'

			background_color: (1, 1, 1, 0)
			canvas.before:
				Rectangle:
					size: self.width / 1.5, self.height / 1.25
					pos: (self.right - self.width / 1.5, self.center_y - (self.height / 1.25) / 2)
					source: 'images/profil.png'

	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.50
		pos_hint: {'center_x': 0.5,'center_y': 0.5}
		padding: 10, 20
		spacing: 10
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.4
			RoundedRectangle:
				size: self.size
				pos: self.pos
		GridLayout:
			cols: 1
			spacing: 5
			TextInput:
				id: isbn_book
				text:'Code ISBN'
				multiline:False
			Label:
				text: 'Scanne'
				size_hint_x: 0.6
			Button:
				text: "Attente caméra"
			# Camera:
			# 	id: camera
			# 	resolution: (320, 240)
			# 	play: True
		Button:
			text: "Recherche"
			size_hint: 0.6, 0.2
			pos_hint: {'center_x': 0.5,'center_y': 0.0}
			on_press: root.search_book_by_isbn()

<CustomSpinnerOption@SpinnerOption>:
	background_color: (1, 1, 1, 0)
	canvas.before:
		Color:
			rgba: (179/255, 179/255, 179/255, 1)
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint_y: None
	height: 30
	color: color_font
