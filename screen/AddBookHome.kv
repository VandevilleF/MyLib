<AddBookHome>:
	FloatLayout:
		Image:
			source: 'images/logo.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 1, 1
		BoxLayout:
			size_hint: 0.15, 0.08
			Button:
				background_normal: 'images/retour.png'
				on_press: root.manager.current = 'UserHome'

	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, 0.08
		pos_hint: {'center_x': 0.5,'center_y': 0.96}
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.2
			Rectangle:
				size: self.size
				pos: self.pos
		Spinner:
			id: menu_spinner
			text: 'Menu'
			values: ['Accueil', 'Bibliothèque', 'Ajout']
			size_hint: 0.3, 1
			on_text: app.handle_menu_selection(menu_spinner.text)

		Label:
			text: 'MyLib'
			font_size: 18
			color: 'black'

		Spinner:
			id: profile_spinner
			text: 'Profil'
			values: ['Mon Profil', 'Modifier', 'Déconnexion']
			size_hint: 0.3, 1
			on_text: app.handle_profile_selection(profile_spinner.text)

	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.20
		pos_hint: {'center_x': 0.5,'center_y': 0.30}
		padding: 10, 20
		spacing: 10
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.4
			RoundedRectangle:
				size: self.size
				pos: self.pos
		Button:
			text:'Par Nom de livre'
			on_press: root.manager.current = 'AddByName'

	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.20
		pos_hint: {'center_x': 0.5,'center_y': 0.65}
		padding: 10, 20
		spacing: 10
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.4
			RoundedRectangle:
				size: self.size
				pos: self.pos
		Button:
			text:'Par Code barre'
			on_press: root.manager.current = 'AddByBarcode'
