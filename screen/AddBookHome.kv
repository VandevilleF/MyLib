#:set color_font (0, 0, 0, 1)

<AddBookHome>:
	FloatLayout:
		Image:
			source: 'images/logo.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 1, 1
		BoxLayout:
			size_hint: 0.15, 0.08
			Button:
				background_normal: 'images/retour.png'
				on_press: root.manager.current = 'UserHome'

	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, 0.08
		pos_hint: {'center_x': 0.5,'center_y': 0.96}
		canvas.before:
			Color:
				rgba: 1, 1, 1, 0.4
			Rectangle:
				size: self.size
				pos: self.pos

		Spinner:
			id: menu_spinner
			values: ['Accueil', 'Bibliothèque', 'Ajout']
			size_hint: 0.55, 1
			on_text: app.handle_menu_selection(menu_spinner.text)
			option_cls: 'CustomSpinnerOption'

			background_color: (1, 1, 1, 0)
			canvas.after:
				Rectangle:
					size: self.width / 1.5, self.height / 1.25
					pos: (self.x, self.center_y - (self.height / 1.25) / 2)
					source: 'images/menu.png'

		Label:
			text: 'MyLib'
			font_size: 18
			color: 'black'

		Spinner:
			id: profile_spinner
			values: ['Mon Profil', 'Modifier', 'Déconnexion']
			size_hint: 0.55, 1
			on_text: app.handle_profile_selection(profile_spinner.text)
			option_cls: 'CustomSpinnerOption'

			background_color: (1, 1, 1, 0)
			canvas.before:
				Rectangle:
					size: self.width / 1.5, self.height / 1.25
					pos: (self.right - self.width / 1.5, self.center_y - (self.height / 1.25) / 2)
					source: 'images/profil.png'

	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.20
		pos_hint: {'center_x': 0.5,'center_y': 0.30}
		padding: 10, 20
		spacing: 10

		Button:
			text:'Par Nom de livre'
			background_color: (1, 1, 1, 0)
			on_press: root.manager.current = 'AddByName'
			canvas.before:
				Color:
					rgba: 0, 0, 0, 0.5
				RoundedRectangle:
					size: (self.width + 4, self.height + 4)
					pos: (self.x - 2, self.y - 2)
					radius: (40, 200)
				Color:
					rgba: 44/255, 62/255, 80/255, 0.9
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: (40, 200)
					texture: Gradient.horizontal(get_color_from_hex('#76a9de'), get_color_from_hex('#fafafa'), get_color_from_hex('#76a9de'))


	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.20
		pos_hint: {'center_x': 0.5,'center_y': 0.65}
		padding: 10, 20
		spacing: 10

		Button:
			text:'Par Code barre'
			background_color: (1, 1, 1, 0)
			on_press: root.manager.current = 'AddByBarcode'
			canvas.before:
				Color:
					rgba: 0, 0, 0, 0.5
				RoundedRectangle:
					size: (self.width + 4, self.height + 4)
					pos: (self.x - 2, self.y - 2)
					radius: (40, 200)
				Color:
					rgba: 44/255, 62/255, 80/255, 0.9
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: (40, 200)
					texture: Gradient.horizontal(get_color_from_hex('#76a9de'), get_color_from_hex('#fafafa'), get_color_from_hex('#76a9de'))


<CustomSpinnerOption@SpinnerOption>:
	background_color: (1, 1, 1, 0)
	canvas.before:
		Color:
			rgba: (179/255, 179/255, 179/255, 1)
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint_y: None
	height: 30
	color: color_font
