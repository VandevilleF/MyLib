#:set color_font (0, 0, 0, 1)
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient
<CreateAccount>:
	FloatLayout:
		Image:
			source: 'images/logo.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 1, 1
		BoxLayout:
			size_hint: 0.15, 0.08
			Button:
				background_normal: 'images/retour.png'
				on_press: root.manager.current = 'HomePage'

	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, 0.08
		pos_hint: {'center_x': 0.5,'center_y': 0.96}
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.4
			Rectangle:
				size: self.size
				pos: self.pos
		Label:
			text: 'MyLib'
			font_size: 18
			color: 'black'

	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.35
		pos_hint: {'center_x': 0.5,'center_y': 0.5}
		padding: 10, 10
		spacing: 10
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.3
			RoundedRectangle:
				size: self.size
				pos: self.pos

		GridLayout:
			cols: 2
			spacing: 5
			Label:
				text: 'Nom'
				size_hint_x: 0.6
				color: color_font
			TextInput:
				id: nom
				multiline:False
			Label:
				text: 'Mail'
				size_hint_x: 0.6
				color: color_font
			TextInput:
				id: mail
				multiline:False
			Label:
				text: 'Mot de passe'
				size_hint_x: 0.6
				color: color_font
			TextInput:
				id: mdp
				multiline: False
				password: True
			Label:
				text: 'Confirmation'
				size_hint_x: 0.6
				color: color_font
			TextInput:
				id: confir_mdp
				multiline:False
				password: True
		Button:
			text: "Valider"
			size_hint: 0.9, 0.3
			pos_hint: {'center_x': 0.5,'center_y': 0.0}
			bold: True
			outline_color: (0, 0, 0)
			outline_width: 1
			background_color: (1, 1, 1, 0)
			on_press: root.register_user()
			canvas.before:
				Color:
					rgba: 0, 0, 0, 0.5
				RoundedRectangle:
					size: (self.width + 4, self.height + 4)
					pos: (self.x - 2, self.y - 2)
					radius: (20, 200)
				Color:
					rgba: 44/255, 62/255, 80/255, 0.9
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: (20, 200)
					texture: Gradient.horizontal(get_color_from_hex('#76a9de'), get_color_from_hex('#fafafa'), get_color_from_hex('#76a9de'))

