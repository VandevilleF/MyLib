#:set color_font (0, 0, 0, 1)
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient
<AddByName>:
	FloatLayout:
		Image:
			source: 'images/logo.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 1, 1
		BoxLayout:
			size_hint: 0.15, 0.08
			Button:
				background_normal: 'images/retour.png'
				on_press: root.manager.current = 'AddBookHome'

	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, 0.08
		pos_hint: {'center_x': 0.5,'center_y': 0.96}
		canvas.before:
			Color:
				rgba: 1, 1, 1, 0.4
			Rectangle:
				size: self.size
				pos: self.pos

		Spinner:
			id: menu_spinner
			values: ['Accueil', 'Bibliothèque', 'Ajout']
			size_hint: 0.55, 1
			on_text: app.handle_menu_selection(menu_spinner.text)
			option_cls: 'CustomSpinnerOption'

			background_color: (1, 1, 1, 0)
			canvas.after:
				Rectangle:
					size: self.width / 1.5, self.height / 1.25
					pos: (self.x, self.center_y - (self.height / 1.25) / 2)
					source: 'images/menu.png'

		Label:
			text: 'MyLib'
			font_size: 18
			color: 'black'

		Spinner:
			id: profile_spinner
			values: ['Mon Profil', 'Modifier', 'Déconnexion']
			size_hint: 0.55, 1
			on_text: app.handle_profile_selection(profile_spinner.text)
			option_cls: 'CustomSpinnerOption'

			background_color: (1, 1, 1, 0)
			canvas.before:
				Rectangle:
					size: self.width / 1.5, self.height / 1.25
					pos: (self.right - self.width / 1.5, self.center_y - (self.height / 1.25) / 2)
					source: 'images/profil.png'

	BoxLayout:
		orientation:'vertical'
		size_hint: 0.70, 0.23
		pos_hint: {'center_x': 0.5,'center_y': 0.5}
		padding: 10
		spacing: 10
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.4
			RoundedRectangle:
				size: self.size
				pos: self.pos
		GridLayout:
			cols: 2
			spacing: 5
			Label:
				text: 'Nom du livre'
				color: color_font
				size_hint_x: 0.6
			TextInput:
				id: book_name
				text:''
				multiline:False
			Label:
				text: 'Auteur'
				color: color_font
				size_hint_x: 0.6
			TextInput:
				id: author_name
				text:''
				multiline:False
		Button:
			text: "Recherche"
			size_hint: 0.9, 0.5
			bold: True
			outline_color: (0, 0, 0)
			outline_width: 1
			background_color: (1, 1, 1, 0)
			pos_hint: {'center_x': 0.5,'center_y': 0.0}
			on_press: root.search_book()
			canvas.before:
				Color:
					rgba: 0, 0, 0, 0.5
				RoundedRectangle:
					size: (self.width + 4, self.height + 4)
					pos: (self.x - 2, self.y - 2)
					radius: (20, 200)
				Color:
					rgba: 44/255, 62/255, 80/255, 0.9
				RoundedRectangle:
					size: self.size
					pos: self.pos
					radius: (20, 200)
					texture: Gradient.horizontal(get_color_from_hex('#76a9de'), get_color_from_hex('#fafafa'), get_color_from_hex('#76a9de'))


<CustomSpinnerOption@SpinnerOption>:
	background_color: (1, 1, 1, 0)
	canvas.before:
		Color:
			rgba: (179/255, 179/255, 179/255, 1)
		Rectangle:
			size: self.size
			pos: self.pos
	size_hint_y: None
	height: 30
	color: color_font
