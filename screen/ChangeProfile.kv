<ChangeProfile>:
	FloatLayout:
		Image:
			source: 'images/logo.jpg'
			allow_stretch: True
			keep_ratio: False
			size_hint: 1, 1
		BoxLayout:
			size_hint: 0.15, 0.08
			Button:
				background_normal: 'images/retour.png'
				on_press: root.manager.current = 'UserHome'
		BoxLayout:
			size_hint: 0.28, 0.05
			pos_hint: {'right': 1,'y': 0}

	BoxLayout:
		orientation:'horizontal'
		size_hint: 1, 0.08
		pos_hint: {'center_x': 0.5,'center_y': 0.96}
		canvas.before:
			Color:
				rgba: 255, 255, 255, 0.2
			Rectangle:
				size: self.size
				pos: self.pos
		Spinner:
			id: menu_spinner
			text: 'Menu'
			values: ['Accueil', 'Bibliothèque', 'Ajout']
			size_hint: 0.3, 1
			on_text: app.handle_menu_selection(menu_spinner.text)

		Label:
			text: 'MyLib'
			font_size: 18
			color: 'black'

		Spinner:
			id: profile_spinner
			text: 'Profil'
			values: ['Mon Profil', 'Modifier', 'Déconnexion']
			size_hint: 0.3, 1
			on_text: app.handle_profile_selection(profile_spinner.text)
	BoxLayout:
		orientation:'vertical'
		pos_hint: {'center_x': 0.5,'center_y': 0.5}
		size_hint_y: 0.84
		padding: 10, 20
		spacing: 10

		Image:
			source: "images/profil.png"
			size_hint: 0.8, 0.8
			pos_hint: {'center_x': 0.5,'center_y': 0.5}
		Label:
			id: load_username
			text:""
			font_size: 32
			size_hint: 1, 0.2
		Label:
			text: "Choisir la ligne à modifier"
			font_size: 18
			size_hint: 1, 0.2
		TabbedPanel:
			do_default_tab: False
			background_color: [1, 1, 1, 0]
			tab_pos: 'top_mid'
			TabbedPanelItem:
				text: "Nom"
				background_color: [255, 255, 255, 0.3]
				BoxLayout:
					orientation: 'vertical'
					spacing: 10
					padding: 10
					GridLayout:
						cols: 2
						spacing: 5
						Label:
							text:'Nouveau Nom'
						TextInput:
							id: new_name
						Label:
							text:'Mot de passe'
						TextInput:
							id: pwd
							multiline: False
							password: True
						Label:
							text: ""
					Button:
						text:"Valider"
						size_hint: 0.8, 0.3
						pos_hint: {'center_x': 0.5,'center_y': 0.5}
						on_press: root.change_username()

			TabbedPanelItem:
				text: "Mail"
				background_color: [255, 255, 255, 0.3]
				BoxLayout:
					orientation: 'vertical'
					spacing: 10
					padding: 10
					GridLayout:
						cols: 2
						spacing: 5
						Label:
							text:'Nouveau Mail'
						TextInput:
							id: new_mail
						Label:
							text:'Mot de passe'
						TextInput:
							id: pwd_mail
							multiline: False
							password: True
						Label:
							text: ""
					Button:
						text:"Valider"
						size_hint: 0.8, 0.3
						pos_hint: {'center_x': 0.5,'center_y': 0.5}
						on_press: root.change_mail()
			TabbedPanelItem:
				text: "Mot de passe"
				background_color: [255, 255, 255, 0.3]
				BoxLayout:
					orientation: 'vertical'
					spacing: 10
					padding: 10
					GridLayout:
						cols: 2
						spacing: 5
						Label:
							text:'Ancien mot de passe'
						TextInput:
							id: old_pwd
							multiline: False
							password: True
						Label:
							text:'Nouveau mot de passe'
						TextInput:
							id: new_pwd
							multiline: False
							password: True
						Label:
							text:'Confirmation'
						TextInput:
							id: confirm
							multiline: False
							password: True
					Button:
						text:"Valider"
						size_hint: 0.8, 0.3
						pos_hint: {'center_x': 0.5,'center_y': 0.5}
						on_press: root.change_pwd()
